@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <h1 class="display-4">FizzBuzz</h1>
    <div class="row-margin">
        <span asp-validation-for="FizzBuzz.Number" class="text-danger"></span>
    </div>
    <form method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="FizzBuzz.Number"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="FizzBuzz.Number" />
            </div>
        </div>
        <div class="form-group row row-margin">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Wyślij</button>
            </div>
        </div>
    </form>
    
    @if (ViewData["Result"] != null) {
        <div class="alert alert-success row-margin" role="alert">@ViewData["Result"]</div>
    }
    
    
</div>
